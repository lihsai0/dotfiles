[user]
  name = <your_name>
  email = <your_email>
  signingkey = <your_gpg_key_id>

[core]
  excludesfile = ~/.config/git/ignore_global
  pager = delta

[init]
  defaultBranch = main

[push]
  autoSetupRemote = true

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictStyle = zdiff3

[includeIf "gitdir:~/Workspaces"]
  path = ~/Workspace/.gitconfig

;[inlcudeIf "gitdir:~/Workspaces/company/"]
;  path = ~/Workspace/company/.gitconfig

;[includeIf "gitdir:~/Workspaces/individual/lihs-learning"]
;  path = ~/Workspace/individual/lihs-learning/.gitconfig

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[delta]
  navigate = true
